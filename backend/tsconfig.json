{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",                    
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests", "./build"]
}